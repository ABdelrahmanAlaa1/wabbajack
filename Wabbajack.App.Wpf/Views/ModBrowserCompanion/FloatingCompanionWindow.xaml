<Window x:Class="Wabbajack.Views.ModBrowserCompanion.FloatingCompanionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mod Browser Companion"
        Width="300"
        Height="150"
        Topmost="True"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   Text="Mod Browser Companion" 
                   Foreground="White" 
                   FontWeight="Bold" 
                   FontSize="14"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,5"/>
        
        <TextBlock Grid.Row="1" 
                   x:Name="StatusText"
                   Text="Mod 1 of 10" 
                   Foreground="#FFAAAAAA" 
                   FontSize="12"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="2" 
                   x:Name="CurrentModName"
                   Text="" 
                   Foreground="#FF90CAF9" 
                   FontSize="11"
                   TextWrapping="Wrap"
                   TextTrimming="CharacterEllipsis"
                   HorizontalAlignment="Center"
                   MaxHeight="30"
                   Margin="0,0,0,10"/>
        
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button x:Name="PreviousButton" 
                    Content="← Previous" 
                    Width="80" 
                    Height="30"
                    Margin="0,0,10,0"
                    Background="#FF424242"
                    Foreground="White"
                    BorderBrush="#FF616161"/>
            <Button x:Name="NextButton" 
                    Content="Next →" 
                    Width="80" 
                    Height="30"
                    Margin="0,0,10,0"
                    Background="#FF1976D2"
                    Foreground="White"
                    BorderBrush="#FF1565C0"/>
            <Button x:Name="ReturnButton" 
                    Content="Return" 
                    Width="80" 
                    Height="30"
                    Background="#FF616161"
                    Foreground="White"
                    BorderBrush="#FF757575"/>
        </StackPanel>
    </Grid>
</Window>
